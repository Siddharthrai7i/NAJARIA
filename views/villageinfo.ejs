    }

    .info-row {
        display: flex;
        padding: 12px;
        background: #f9f9f9;
        border-radius: 8px;
    }

    .info-label {
        font-weight: 600;
        color: #667eea;
        min-width: 120px;
    }

    .info-value {
        color: #333;
    }

