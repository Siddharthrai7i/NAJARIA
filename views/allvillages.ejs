<%- layout('boilerplate.ejs') %>

    <div class="all-villages-container">
        <div class="page-header">
            <h1>üèòÔ∏è All Villages</h1>
            <p>Explore different village communities</p>
        </div>

        <div class="villages-grid">
            <% villagesWithData.forEach(function(data) { %>
                <div class="village-card">
                    <div class="village-card-header">
                        <div class="village-icon">üèòÔ∏è</div>
                        <div class="village-title">
                            <h2>
                                <%= data.village.name %>
                            </h2>
                            <p class="village-desc">
                                <%= data.village.description %>
                            </p>
                        </div>
                    </div>

                    <div class="village-stats">
                        <div class="stat">
                            <span class="stat-icon">üë•</span>
                            <div class="stat-content">
                                <span class="stat-value">
                                    <%= data.userCount %>
                                </span>
                                <span class="stat-label">Members</span>
                            </div>
                        </div>
                        <% if (data.village.lagion) { %>
                            <div class="stat">
                                <span class="stat-icon">üëë</span>
                                <div class="stat-content">
                                    <span class="stat-value">
                                        <%= data.village.lagion.fullName %>
                                    </span>
                                    <span class="stat-label">Lagion</span>
                                </div>
                            </div>
                            <% } %>
                    </div>

                    <!-- Members Preview -->
                    <div class="members-preview">
                        <h4>Members:</h4>
                        <div class="members-list">
                            <% if (data.members.length> 0) { %>
                                <% data.members.slice(0, 3).forEach(function(member) { %>
                                    <div class="member-tag">
                                        <span class="member-avatar">
                                            <%= member.fullName.charAt(0).toUpperCase() %>
                                        </span>
                                        <span>
                                            <%= member.fullName %>
                                        </span>
                                    </div>
                                    <% }); %>
                                        <% if (data.members.length> 3) { %>
                                            <span class="more-members">+<%= data.members.length - 3 %> more</span>
                                            <% } %>
                                                <% } else { %>
                                                    <p class="no-members-text">No members yet</p>
                                                    <% } %>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="village-actions">
                        <a href="/villages/<%= data.village._id %>/details" class="btn btn-primary">
                            ‚ÑπÔ∏è View Details
                        </a>
                        <a href="/villages/<%= data.village._id %>/posts" class="btn btn-secondary">
                            üì∞ View Posts
                        </a>
                    </div>
                </div>
                <% }); %>
        </div>

        <% if (villagesWithData.length===0) { %>
            <div class="no-villages">
                <div class="empty-icon">üèòÔ∏è</div>
                <h2>No villages found</h2>
                <p>Check back later for new village communities</p>
            </div>
            <% } %>
    </div>

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .all-villages-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 30px 20px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 40px;
            background: white;
            padding: 40px 30px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
            animation: fadeInDown 0.5s ease;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .page-header h1 {
            font-size: 48px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 12px;
            font-weight: 700;
        }

        .page-header p {
            font-size: 18px;
            color: #718096;
        }

        .villages-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            animation: fadeInUp 0.6s ease;
        }

        .village-card {
            background: white;
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border: 2px solid transparent;
            display: flex;
            flex-direction: column;
        }

        .village-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
            border-color: #667eea;
        }

        .village-card-header {
            display: flex;
            align-items: flex-start;
            gap: 18px;
            margin-bottom: 20px;
        }

        .village-icon {
            font-size: 50px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 15px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .village-title {
            flex: 1;
        }

        .village-title h2 {
            font-size: 24px;
            color: #2d3748;
            margin-bottom: 8px;
            font-weight: 700;
        }

        .village-desc {
            color: #718096;
            font-size: 15px;
            line-height: 1.6;
            margin: 0;
        }

        .village-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-bottom: 20px;
            padding: 18px;
            background: #f7fafc;
            border-radius: 14px;
        }

        .stat {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .stat-icon {
            font-size: 32px;
        }

        .stat-content {
            display: flex;
            flex-direction: column;
        }

        .stat-value {
            font-size: 18px;
            font-weight: 700;
            color: #2d3748;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .stat-label {
            font-size: 13px;
            color: #718096;
            font-weight: 500;
        }

        .members-preview {
            margin-bottom: 20px;
            padding: 18px;
            background: #f7fafc;
            border-radius: 14px;
            flex-grow: 1;
        }

        .members-preview h4 {
            font-size: 16px;
            color: #2d3748;
            margin-bottom: 12px;
            font-weight: 700;
        }

        .members-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            align-items: center;
        }

        .member-tag {
            display: flex;
            align-items: center;
            gap: 8px;
            background: white;
            padding: 8px 14px;
            border-radius: 20px;
            font-size: 14px;
            border: 2px solid #e2e8f0;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .member-tag:hover {
            border-color: #667eea;
            transform: translateY(-2px);
        }

        .member-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
            flex-shrink: 0;
        }

        .more-members {
            color: #667eea;
            font-weight: 700;
            font-size: 14px;
            padding: 8px 14px;
            background: #f0f4ff;
            border-radius: 20px;
            border: 2px solid #e0e8ff;
        }

        .no-members-text {
            color: #a0aec0;
            font-size: 14px;
            font-style: italic;
            margin: 0;
        }

        .village-actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
        }

        .btn {
            padding: 14px 20px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            text-align: center;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .btn-secondary {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(72, 187, 120, 0.3);
        }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(72, 187, 120, 0.4);
            color: white;
        }

        .no-villages {
            text-align: center;
            padding: 80px 40px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            animation: fadeInUp 0.7s ease;
        }

        .empty-icon {
            font-size: 80px;
            margin-bottom: 20px;
        }

        .no-villages h2 {
            font-size: 28px;
            color: #2d3748;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .no-villages p {
            font-size: 16px;
            color: #718096;
        }

        @media (max-width: 768px) {
            .all-villages-container {
                padding: 20px 15px;
            }

            .page-header {
                padding: 30px 25px;
            }

            .page-header h1 {
                font-size: 36px;
            }

            .page-header p {
                font-size: 16px;
            }

            .villages-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .village-card {
                padding: 20px;
            }

            .village-icon {
                font-size: 40px;
                padding: 12px;
            }

            .village-title h2 {
                font-size: 20px;
            }

            .village-desc {
                font-size: 14px;
            }

            .village-stats {
                grid-template-columns: 1fr;
                gap: 12px;
            }

            .village-actions {
                grid-template-columns: 1fr;
                gap: 10px;
            }

            .no-villages {
                padding: 60px 25px;
            }

            .empty-icon {
                font-size: 60px;
            }

            .no-villages h2 {
                font-size: 24px;
            }
        }
    </style>