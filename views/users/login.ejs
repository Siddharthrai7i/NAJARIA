<% layout('boilerplate.ejs') -%>

    <link rel="stylesheet" href="/css/auth.css">

    <div class="auth-page">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-header">
                    <h1 class="auth-title">Welcome Back!</h1>
                    <p class="auth-subtitle">Sign in to your village community account</p>
                </div>
                <form action="/login" method="POST" class="auth-form">
                    <!-- Email -->
                    <div class="form-group">
                        <label for="username" class="form-label">
                            <i class="fas fa-envelope"></i> Username 
                        </label>
                        <input type="text" id="username" name="username" class="form-control" placeholder="Enter your email"
                            required>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label for="password" class="form-label">
                            <i class="fas fa-lock"></i> Password
                        </label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Enter your password" required>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <!-- Submit Button -->
                    <button type="submit" class="btn-auth-primary">
                        <i class="fas fa-sign-in-alt"></i> Sign In
                    </button>
                </form>

                <!-- Divider -->
                <div class="auth-divider">
                    <span>OR</span>
                </div>
                <div class="auth-footer">
                    <p>Don't have an account? <a href="/signup" class="auth-link">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>