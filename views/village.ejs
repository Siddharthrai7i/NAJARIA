<%- layout('boilerplate.ejs') %>

    <div class="village-container">
        <!-- Village Header -->
        <div class="village-header">
            <div class="village-icon">üèòÔ∏è</div>
            <div class="village-info">
                <h1 class="village-name">
                    <%= village.name %>
                </h1>
                <p class="village-description">
                    <%= village.description %>
                </p>
                <div class="village-meta">
                    <span class="meta-badge">üë• <%= members.length %> Members</span>
                    <% if (village.lagion) { %>
                        <span class="meta-badge">üëë Lagion: <%= village.lagion.fullName %></span>
                        <% } else { %>
                            <span class="meta-badge">üëë No Lagion appointed</span>
                            <% } %>
                </div>
            </div>
        </div>

        <!-- Quick Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">üë•</div>
                <div class="stat-content">
                    <h3>
                        <%= members.length %>
                    </h3>
                    <p>Total Members</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üìù</div>
                <div class="stat-content">
                    <h3>
                        <%= posts ? posts.length : 0 %>
                    </h3>
                    <p>Village Posts</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">‚≠ê</div>
                <div class="stat-content">
                    <h3>Active</h3>
                    <p>Community Status</p>
                </div>
            </div>
        </div>

        <!-- Members Section -->
        <div class="section">
            <div class="section-header">
                <h2 class="section-title">üë• Village Members</h2>
                <% if (members.length> 6) { %>
                    <button class="btn-view-all" onclick="toggleMembers()">
                        <span id="view-all-text">View All (<%= members.length %>)</span>
                    </button>
                    <% } %>
            </div>
            <% if (members.length===0) { %>
                <div class="empty-state">
                    <i class="fas fa-users"></i>
                    <p>No members in this village yet.</p>
                </div>
                <% } else { %>
                    <div class="members-grid" id="members-grid">
                        <% members.slice(0, 6).forEach(member=> { %>
                            <div class="member-card">
                                <div class="member-avatar">
                                    <%= member.fullName.charAt(0).toUpperCase() %>
                                </div>
                                <div class="member-info">
                                    <h3 class="member-name">
                                        <%= member.fullName %>
                                    </h3>
                                    <p class="member-username">@<%= member.username %>
                                    </p>
                                    <div class="member-details">
                                        <span>üìß <%= member.email %></span>
                                        <span>üì± <%= member.phoneNumber %></span>
                                    </div>
                                    <div class="member-badges">
                                        <% if (village.lagion && member._id.equals(village.lagion._id)) { %>
                                            <span class="badge badge-lagion">üëë Lagion</span>
                                            <% } %>
                                                <% if (member._id.equals(currentUser._id)) { %>
                                                    <span class="badge badge-you">You</span>
                                                    <% } %>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% if (members.length> 6) { %>
                                    <% members.slice(6).forEach(member=> { %>
                                        <div class="member-card hidden-member" style="display: none;">
                                            <div class="member-avatar">
                                                <%= member.fullName.charAt(0).toUpperCase() %>
                                            </div>
                                            <div class="member-info">
                                                <h3 class="member-name">
                                                    <%= member.fullName %>
                                                </h3>
                                                <p class="member-username">@<%= member.username %>
                                                </p>
                                                <div class="member-details">
                                                    <span>üìß <%= member.email %></span>
                                                    <span>üì± <%= member.phoneNumber %></span>
                                                </div>
                                                <div class="member-badges">
                                                    <% if (village.lagion && member._id.equals(village.lagion._id)) { %>
                                                        <span class="badge badge-lagion">üëë Lagion</span>
                                                        <% } %>
                                                            <% if (member._id.equals(currentUser._id)) { %>
                                                                <span class="badge badge-you">You</span>
                                                                <% } %>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                            <% } %>
                    </div>
                    <% } %>
        </div>

        <!-- Posts Section -->
        <div class="section">
            <div class="section-header">
                <h2 class="section-title">üìù Village Posts</h2>
                <a href="/posts/new" class="btn-create">
                    <i class="fas fa-plus"></i> Create Post
                </a>
            </div>

            <% if (posts && posts.length> 0) { %>
                <div class="posts-grid" id="posts-grid">
                    <% posts.slice(0, 5).forEach(post=> { %>
                        <div class="post-card">
                            <div class="post-header">
                                <h3 class="post-title">
                                    <%= post.title %>
                                </h3>
                                <div class="post-meta">
                                    <div class="meta-info">
                                        <span><i class="fas fa-user"></i>
                                            <%= post.author.fullName || post.author.username %>
                                        </span>
                                        <span><i class="fas fa-clock"></i>
                                            <%= post.createdAt.toLocaleDateString() %>
                                        </span>
                                    </div>
                                    <% if (currentUser._id.toString()===post.author._id.toString()) { %>
                                        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST"
                                            class="delete-form"
                                            onsubmit="return confirm('Are you sure you want to delete this post?');">
                                            <button type="submit" class="btn-delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                        <% } %>
                                </div>
                            </div>

                            <div class="post-content">
                                <p>
                                    <%= post.content %>
                                </p>
                                <% if (post.image) { %>
                                    <div class="post-image-wrapper">
                                        <img src="<%= post.image %>" alt="Post image" class="post-image">
                                    </div>
                                    <% } %>
                            </div>

                            <div class="post-footer">
                                <div class="post-stats">
                                    <span><i class="fas fa-comments"></i>
                                        <%= post.comments.length %> Comments
                                    </span>
                                </div>
                                <a href="/posts/<%= post._id %>" class="btn-view">View Post</a>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% if (posts.length> 5) { %>
                    <div class="view-all-posts">
                        <a href="/posts" class="btn-view-all-posts">
                            View All Posts (<%= posts.length %>) <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                    <% } %>
                        <% } else { %>
                            <div class="empty-state">
                                <i class="fas fa-inbox"></i>
                                <p>No posts yet. Be the first to post!</p>
                                <a href="/posts/new" class="btn-create">
                                    <i class="fas fa-plus"></i> Create First Post
                                </a>
                            </div>
                            <% } %>
        </div>
    </div>

    <script>
        let membersExpanded = false;

        function toggleMembers() {
            const hiddenMembers = document.querySelectorAll('.hidden-member');
            const viewAllText = document.getElementById('view-all-text');
            const membersGrid = document.getElementById('members-grid');

            membersExpanded = !membersExpanded;

            hiddenMembers.forEach(member => {
                member.style.display = membersExpanded ? 'block' : 'none';
            });

            if (membersExpanded) {
                viewAllText.textContent = 'Show Less';
            } else {
                viewAllText.textContent = 'View All (<%= members.length %>)';
                // Scroll back to members section
                membersGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }
    </script>

