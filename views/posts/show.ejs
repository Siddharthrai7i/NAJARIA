<% layout('boilerplate.ejs') -%>
    <div class="post-show-container">
        <div class="back-nav">
            <a href="/posts" class="back-btn">
                <span>‚Üê</span> Back to All Posts
            </a>
        </div>

        <div class="main-content">
            <!-- Left Side: Post Card -->
            <div class="post-card">
                <div class="post-header">
                    <h1 class="post-title">
                        <%= post.title %>
                    </h1>
                    <div class="post-meta">
                        <div class="meta-item">
                            <span class="meta-icon">üë§</span>
                            <div>
                                <strong>
                                    <%= post.author.fullName %>
                                </strong>
                                <span class="meta-username">@<%= post.author.username %></span>
                            </div>
                        </div>
                        <div class="meta-item">
                            <span class="meta-icon">üìß</span>
                            <span>
                                <%= post.author.email %>
                            </span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-icon">üèòÔ∏è</span>
                            <span>
                                <%= post.village.name %>
                            </span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-icon">üìÖ</span>
                            <span>
                                <%= new Date(post.createdAt).toLocaleDateString('en-IN', { year: 'numeric' ,
                                    month: 'long' , day: 'numeric' }) %>
                            </span>
                        </div>
                    </div>
                </div>

                <% if (post.image) { %>
                    <div class="post-image-container">
                        <img src="<%= post.image %>" alt="<%= post.title %>" class="post-image">
                    </div>
                    <% } %>

                        <div class="post-content">
                            <p>
                                <%= post.content %>
                            </p>
                        </div>

                        <% if (currentUser && post.author._id.toString()===currentUser._id.toString()) { %>
                            <div class="post-actions">
                                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST"
                                    onsubmit="return confirm('Are you sure you want to delete this post?');">
                                    <button type="submit" class="btn-delete">üóëÔ∏è Delete Post</button>
                                </form>
                            </div>
                            <% } %>
            </div>

            <!-- Right Side: Comments Section -->
            <div class="comments-section">
                <div class="comments-header">
                    <h2>üí¨ Comments (<%= post.comments.length %>)</h2>
                </div>

                <div class="add-comment-card">
                    <h3>Add Your Comment</h3>
                    <form action="/posts/<%= post._id %>/comment" method="POST" class="comment-form">
                        <textarea name="content" placeholder="Write your comment here..." rows="4" required
                            class="comment-textarea"></textarea>
                        <button type="submit" class="btn-submit">‚úâÔ∏è Post Comment</button>
                    </form>
                </div>

                <div class="comments-list">
                    <% if (post.comments && post.comments.length> 0) { %>
                        <% post.comments.forEach(function(comment) { %>
                            <div class="comment-card">
                                <div class="comment-header">
                                    <div class="comment-author">
                                        <div class="author-avatar">
                                            <%= comment.user.fullName.charAt(0).toUpperCase() %>
                                        </div>
                                        <div class="author-info">
                                            <h4>
                                                <%= comment.user.fullName %>
                                            </h4>
                                            <span class="author-username">@<%= comment.user.username %></span>
                                        </div>
                                    </div>
                                    <% if (currentUser && comment.user._id.toString()===currentUser._id.toString()) { %>
                                        <form action="/posts/<%= post._id %>/comment/<%= comment._id %>?_method=DELETE"
                                            method="POST" class="delete-comment-form"
                                            onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                            <button type="submit" class="btn-delete-comment"
                                                title="Delete Comment">üóëÔ∏è</button>
                                        </form>
                                        <% } %>
                                </div>

                                <div class="comment-content">
                                    <p>
                                        <%= comment.content %>
                                    </p>
                                </div>

                                <div class="comment-actions">
                                    <button class="btn-reply" onclick="toggleReplyForm('<%= comment._id %>')">üí¨
                                        Reply</button>
                                    <% if (comment.replies && comment.replies.length> 0) { %>
                                        <button class="btn-show-replies" onclick="toggleReplies('<%= comment._id %>')">
                                            üëÅÔ∏è <span id="reply-count-<%= comment._id %>">
                                                <%= comment.replies.length %>
                                            </span>
                                            <span id="reply-text-<%= comment._id %>">Replies</span>
                                        </button>
                                        <% } %>
                                </div>

                                <div id="reply-form-<%= comment._id %>" class="reply-form-container"
                                    style="display: none;">
                                    <form action="/posts/<%= post._id %>/comment/<%= comment._id %>/reply" method="POST"
                                        class="reply-form">
                                        <textarea name="content" placeholder="Write your reply..." rows="3" required
                                            class="reply-textarea"
                                            id="reply-textarea-<%= comment._id %>">@<%= comment.user.username %> </textarea>
                                        <div class="reply-form-actions">
                                            <button type="submit" class="btn-submit-reply">‚úâÔ∏è Post Reply</button>
                                            <button type="button" class="btn-cancel-reply"
                                                onclick="toggleReplyForm('<%= comment._id %>')">‚ùå Cancel</button>
                                        </div>
                                    </form>
                                </div>

                                <% if (comment.replies && comment.replies.length> 0) { %>
                                    <div id="replies-<%= comment._id %>" class="replies-container"
                                        style="display: none;">
                                        <% comment.replies.forEach(function(reply) { %>
                                            <div class="reply-card">
                                                <div class="reply-header">
                                                    <div class="reply-author">
                                                        <div class="reply-avatar">
                                                            <%= reply.user.fullName.charAt(0).toUpperCase() %>
                                                        </div>
                                                        <div class="reply-author-info">
                                                            <h5>
                                                                <%= reply.user.fullName %>
                                                            </h5>
                                                            <span class="reply-username">@<%= reply.user.username %>
                                                                    </span>
                                                        </div>
                                                    </div>
                                                    <% if (currentUser &&
                                                        reply.user._id.toString()===currentUser._id.toString()) { %>
                                                        <form
                                                            action="/posts/<%= post._id %>/comment/<%= comment._id %>/reply/<%= reply._id %>?_method=DELETE"
                                                            method="POST" class="delete-reply-form"
                                                            onsubmit="return confirm('Are you sure you want to delete this reply?');">
                                                            <button type="submit" class="btn-delete-reply"
                                                                title="Delete Reply">üóëÔ∏è</button>
                                                        </form>
                                                        <% } %>
                                                </div>
                                                <div class="reply-content">
                                                    <p>
                                                        <%= reply.content %>
                                                    </p>
                                                </div>
                                            </div>
                                            <% }); %>
                                    </div>
                                    <% } %>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <div class="no-comments">
                                        <p>üí≠ No comments yet. Be the first to comment!</p>
                                    </div>
                                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleReplyForm(commentId) {
            const form = document.getElementById('reply-form-' + commentId);
            const textarea = document.getElementById('reply-textarea-' + commentId);
            if (form.style.display === 'none') {
                form.style.display = 'block';
                textarea.focus();
                textarea.setSelectionRange(textarea.value.length, textarea.value.length);
            } else {
                form.style.display = 'none';
            }
        }

        function toggleReplies(commentId) {
            const repliesContainer = document.getElementById('replies-' + commentId);
            const btn = event.target.closest('.btn-show-replies');
            const replyText = document.getElementById('reply-text-' + commentId);
            if (repliesContainer.style.display === 'none') {
                repliesContainer.style.display = 'block';
                replyText.textContent = 'Hide Replies';
                btn.innerHTML = btn.innerHTML.replace('üëÅÔ∏è', 'üôà');
            } else {
                repliesContainer.style.display = 'none';
                replyText.textContent = 'Replies';
                btn.innerHTML = btn.innerHTML.replace('üôà', 'üëÅÔ∏è');
            }
        }
    </script>

