<div class="post-show-container">
    <div class="back-nav">
        <a href="/village/posts" class="back-btn">
            <span>‚Üê</span> Back to All Posts
        </a>
    </div>
    <div class="post-card">
        <div class="post-header">
            <h1 class="post-title">
                <%= post.title %>
            </h1>

            <div class="post-meta">
                <div class="meta-item">
                    <span class="meta-icon">üë§</span>
                    <span><strong>
                            <%= post.author.fullName %>
                        </strong></span>
                    <span class="meta-username">@<%= post.author.username %></span>
                </div>

                <div class="meta-item">
                    <span class="meta-icon">üìß</span>
                    <span>
                        <%= post.author.email %>
                    </span>
                </div>

                <div class="meta-item">
                    <span class="meta-icon">üèòÔ∏è</span>
                    <span>
                        <%= post.village.name %>
                    </span>
                </div>

                <div class="meta-item">
                    <span class="meta-icon">üìÖ</span>
                    <span>
                        <%= new Date(post.createdAt).toLocaleDateString('en-IN', { year: 'numeric' , month: 'long' ,
                            day: 'numeric' }) %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Post Content -->
        <div class="post-content">
            <p>
                <%= post.content %>
            </p>
        </div>

        <!-- Post Actions (Delete button) -->
        <% if (currentUser && post.author._id.toString()===currentUser._id.toString()) { %>
            <div class="post-actions">
                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST"
                    onsubmit="return confirm('Are you sure you want to delete this post?');">
                    <button type="submit" class="btn-delete">
                        üóëÔ∏è Delete Post
                    </button>
                </form>
            </div>
            <% } %>
    </div>
    <div class="comments-section">
        <div class="comments-header">
            <h2>üí¨ Comments (<%= post.comments.length %>)</h2>
        </div>
        <div class="add-comment-card">
            <h3>Add Your Comment</h3>
            <form action="/posts/<%= post._id %>/comment" method="POST" class="comment-form">
                <textarea name="content" placeholder="Write your comment here..." rows="4" required
                    class="comment-textarea"></textarea>
                <button type="submit" class="btn-submit">
                    ‚úâÔ∏è Post Comment
                </button>
            </form>
        </div>

        <!-- Comments List -->
        <div class="comments-list">
            <% if (post.comments && post.comments.length> 0) { %>
                <% post.comments.forEach(function(comment) { %>
                    <div class="comment-card">
                        <div class="comment-header">
                            <div class="comment-author">
                                <div class="author-avatar">
                                    <%= comment.user.fullName.charAt(0).toUpperCase() %>
                                </div>
                                <div class="author-info">
                                    <h4>
                                        <%= comment.user.fullName %>
                                    </h4>
                                    <span class="author-username">@<%= comment.user.username %></span>
                                </div>
                            </div>
                        </div>
                        <div class="comment-content">
                            <p>
                                <%= comment.content %>
                            </p>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="no-comments">
                                <p>üí≠ No comments yet. Be the first to comment!</p>
                            </div>
                            <% } %>
        </div>
    </div>
</div>

